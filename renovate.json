{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "labels": [
    "ðŸ¤– Dependencies"
  ],
  "commitMessagePrefix": "chore(deps): ",
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "platformAutomerge": true,
  "postUpdateOptions": [
    "gomodTidy",
    "pnpmDedupe"
  ],
  "packageRules": [
    {
      "groupName": "all dependencies",
      "groupSlug": "all",
      "description": "Automerge non-major updates",
      "matchUpdateTypes": [
        "digest",
        "pin",
        "patch",
        "minor"
      ],
      "automerge": true
    }
  ],
  "ignoreDeps": [
    "typescript"
  ]
}
