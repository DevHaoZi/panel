{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "labels": [
    "ðŸ¤– Dependencies"
  ],
  "commitMessagePrefix": "chore(deps): ",
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "postUpdateOptions": [
    "gomodTidy",
    "pnpmDedupe"
  ],
  "packageRules": [
    {
      "description": "Automerge non-major updates",
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    }
  ],
  "ignoreDeps": [
    "eslint"
  ]
}
